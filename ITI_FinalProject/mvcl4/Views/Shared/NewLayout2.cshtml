<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image:url('../images/wall5.jpg'); /* Solid color, no text or patterns */
            background-size:cover;
            background-position:center;
            min-height: 100vh;
            display: flex;
            justify-content: center; /* Horizontal centering */
            align-items: center; /* Vertical centering */
            font-family: 'Segoe UI', sans-serif;
            margin: 0; /* Remove default margin */
        }
        .card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
        }
        .card-header {
            background: #0288d1;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
        .card-body {
            background: #ffffff;
            padding: 20px;
        }
        .student-info dt {
            color: #455a64;
            font-weight: 500;
        }
        .student-info dd {
            color: #263238;
            margin-bottom: 10px;
        }
        .btn-custom {
            background: #ff7043;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 8px;
            transition: background 0.3s;
        }
        .btn-custom:hover {
            background: #f4511e;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%; /* Ensure container takes full height */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header text-center">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                @RenderBody() <!-- This is crucial! -->
            </div>
        </div>
    </div>
</body>
</html>