@model IEnumerable<Student>
@{
    ViewData["Title"] = "GetAll";
}

@* <h1 style="color: darkblue;">Get All Students</h1> *@
<h1>ALL Students</h1>
<div class="addstd">
    <a asp-controller="Student" asp-action="Create" class=" btn btn-primary">Add Student</a>
</div>


<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(s => s.Id) </th> @* to display my naming *@
            <th>@Html.DisplayNameFor(e => e.Name)</th>
            <th>@Html.DisplayNameFor(e => e.Age)</th>
            <th>@Html.DisplayNameFor(e => e.Address)</th>
            <th>@Html.DisplayNameFor(e => e.Email)</th>
            <th>@Html.DisplayNameFor(e => e.DeptId)</th>
            <th>@Html.DisplayNameFor(e => e.Department.DeptName)</th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id </td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.DeptId</td>
                <td>@item.Department.DeptName</td>
                 <td>
                    <div class="btn">
                    <a asp-controller="Student" asp-action="Details" asp-route-Id="@item.Id" class=" btn btn-secondary">Details</a>
                    <a asp-controller="Student" asp-action="Edit" asp-route-Id="@item.Id" class=" btn btn-success">Edit</a> 
                    <a asp-controller="Student" asp-action="Check" asp-route-Id="@item.Id" class=" btn btn-danger" >Delete</a>
                    </div>
                 </td> 
            </tr>
        }
    </tbody>
</table>
